#!/bin/bash

env=$1
file=""
fails=""

if [[ "${env}" == "stage" ]]; then
    file="docker-compose.yml"
elif [[ "${env}" == "dev" ]]; then
    file="docker-compose.yml"
elif [[ "${env}" == "prod" ]]; then
    file="docker-compose-prod.yml"
else
    echo "USAGE: sh test <env>"
    echo "* env: must be either 'dev', 'stage', or 'prod'"
    exit
fi

inspect() {
    if [ $1 -ne 0 ]; then
        fails="${fails} $2"
    fi
}

docker-compose -f $file run --rm users python manage.py test
inspect $? users
docker-compose -f $file run --rm users flake8 project
inspect $? users-lint
if [[ "${env}" == "dev" ]]; then
    docker-compose -f $file run --rm client npm test -- --coverage
    inspect $? client
fi

if [ -n "${fails}" ]; then
    echo "Tests failed: ${fails}"
    exit 1
else
    echo "Tests passed!"
    exit 0
fi
